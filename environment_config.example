# AI Object Counting Application - Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment (development, testing, production)
OBJ_DETECT_ENV=development

# Flask Application Settings
OBJ_DETECT_API_HOST=0.0.0.0
OBJ_DETECT_API_PORT=5000
FLASK_ENV=development
FLASK_DEBUG=True

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type (sqlite, mysql, postgresql)
DATABASE_TYPE=sqlite

# SQLite Database (for development/testing)
OBJ_DETECT_MYSQL_DB=obj_detect.db

# MySQL Database (for production)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=obj_detect_user
# MYSQL_PASSWORD=your_secure_password
# MYSQL_DATABASE=obj_detect_db

# PostgreSQL Database (alternative for production)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=obj_detect_user
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_DATABASE=obj_detect_db

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Media Directory (where uploaded images are stored)
MEDIA_DIRECTORY=media

# Maximum file size (in bytes) - 10MB default
MAX_FILE_SIZE=10485760

# Allowed file extensions
ALLOWED_EXTENSIONS=png,jpg,jpeg,bmp,gif

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# AI Model Device (cpu, cuda, mps)
AI_DEVICE=cpu

# Model Download Directory
MODEL_DIRECTORY=models

# SAM Model Configuration
SAM_MODEL_TYPE=vit_b
SAM_CHECKPOINT_URL=https://dl.fbaipublicfiles.com/segment_anything/sam_vit_b_01ec64.pth

# Transformers Model Configuration
TRANSFORMERS_MODEL=google/vit-base-patch16-224

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Batch Processing Limits
MAX_BATCH_SIZE=10
MAX_CONCURRENT_REQUESTS=5

# Processing Timeouts (in seconds)
PROCESSING_TIMEOUT=120
BATCH_PROCESSING_TIMEOUT=300

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret Key for Flask (generate a secure random key for production)
SECRET_KEY=your-secret-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=logs/app.log

# Log Rotation
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=True

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend Build Directory
FRONTEND_BUILD_DIR=seth_front_end/dist

# Frontend Development Server
FRONTEND_DEV_PORT=3000

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production Database URL (if using external database)
# DATABASE_URL=mysql://user:password@host:port/database
# DATABASE_URL=postgresql://user:password@host:port/database

# Production Media Storage (AWS S3, Google Cloud Storage, etc.)
# MEDIA_STORAGE_TYPE=local
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Database (SQLite)
DEV_DATABASE_PATH=dev_obj_detect.db

# Development Media Directory
DEV_MEDIA_DIRECTORY=dev_media

# Development Logging
DEV_LOG_LEVEL=DEBUG
DEV_LOG_TO_CONSOLE=True



